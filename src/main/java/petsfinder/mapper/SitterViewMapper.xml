<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="petsfinder.petsitter.SitterViewDAOImpl">

	<select id="sitterView" resultType="petsfinder.petsitter.SitterViewDTO">
		SELECT * FROM sitter WHERE member_idx = #{member_idx}
	</select>
	
	<select id="stMember" resultType="petsfinder.member.MemberDTO">
		SELECT * FROM member WHERE member_idx = #{member_idx}
	</select>
	
	<select id="stPet" resultType="petsfinder.petsitter.SitterViewDTO">
		SELECT * FROM pet WHERE member_idx = #{member_idx}
	</select>
	
	<select id="stReview" resultType="petsfinder.petsitter.SitterViewDTO">
		SELECT * FROM sitter_review WHERE sit_idx = #{sit_idx}
	</select>
</mapper>